{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"#/*": ["types/*"]
		},
		"jsx": "react-jsx",
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"strict": true
	},

	"include": ["src"],

	"exclude": ["node_modules", "dist"]
}
